---
interface Props {
	alt: string
	src: string
	title: string
	body: string
	code: string
	preview: string
}

const { alt, src, title, body, code, preview } = Astro.props
---

<article class="m-auto h-2/3 p-10 md:w-3/4 lg:m-0 lg:w-1/2 2xl:w-1/3">
	<div class="rounded-2xl bg-Orange object-fill">
		<img src={src} alt={alt} />
	</div>
	<div>
		<h3 class="pb-4 pt-5 text-3xl text-Orange underline md:pt-10 md:text-3xl lg:text-2xl">
			{title}
		</h3>
		<p
			class="md:text-md text-pretty text-lg md:pt-10 md:text-xl lg:min-h-64 lg:text-lg dark:text-white"
		>
			{body}
		</p>

		<div class="m-3 flex justify-center gap-3 p-2">
			<slot />
		</div>

		<div class="flex h-auto flex-col justify-center gap-4 pt-4 md:flex-row md:justify-center">
			<a
				href={code}
				target="_blank"
				class="flex items-center justify-center gap-3 rounded-xl bg-Orange p-2 text-center text-white transition-colors duration-300 hover:bg-white hover:text-Orange lg:p-5"
				><i class="fa-solid fa-code"></i>
				<button class="md:text-2xl">Code</button></a
			>
			<a
				href={preview}
				target="_blank"
				class="flex items-center justify-center gap-3 rounded-xl bg-Orange p-2 text-center text-white transition-colors duration-300 hover:bg-white hover:text-Orange lg:p-5"
			>
				<i class="fa-solid fa-eye"></i>
				<button class="md:text-2xl">Preview</button></a
			>
		</div>
	</div>
</article>
