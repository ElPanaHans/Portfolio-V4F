<script>
	const $UpBTN = document.getElementById('UpBTN')

	window.addEventListener('scroll', () => {
		// Altura total de la página
		const alturaPagina = document.documentElement.scrollHeight - window.innerHeight
		// Distancia de desplazamiento vertical
		const scrollVertical =
			window.scrollY || window.pageYOffset || document.documentElement.scrollTop

		// Calcular el porcentaje de desplazamiento
		const porcentajeDesplazado = (scrollVertical / alturaPagina) * 100

		if (porcentajeDesplazado >= 20) {
			$UpBTN.classList.remove('hidden')
		} else {
			$UpBTN.classList.add('hidden')
		}
	})
</script>

